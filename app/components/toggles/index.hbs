  <FormRadioGroup
    @label={{@label}}
    @value={{this.justifyContent}}
    @onChange={{@onToggle}}
    class="bg-gray-300 rounded-xl p-4"
    as |Radio|
  >
    <Radio @value="" @label="none" />
    {{#each @options as |option|}}
      <Radio @value={{option}} @label={{option}} />
    {{/each}}
  </FormRadioGroup>