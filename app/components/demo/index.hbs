<div class="flex flex-row overflow-x-scroll">
  {{#each this.classGroups as |classGroup|}}
    <Toggles
      @label={{classGroup.label}}
      @valid={{classGroup.valid}}
      @options={{classGroup.options}}
      @onToggle={{fn this.toggleRadio classGroup.id}}
    />
  {{/each}}
  {{log this.selected}}

</div>

<Parent @classes="{{this.parentClasses}}">
  <Child>01</Child>
  <Child>02</Child>
  <Child>03</Child>
</Parent>

<Parent @classes="{{this.parentClasses}}" @type="grid">
  <Child>01</Child>
  <Child>02</Child>
  <Child>03</Child>
</Parent>